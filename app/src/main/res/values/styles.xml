<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="ButtonStyle">
        <item name="android:backgroundTint">@color/button_color</item>
        <item name="android:textSize">15sp</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BlockButtonStyle">
        <item name="android:backgroundTint">@color/stroke</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">start</item>
        <item name="android:enabled">false</item>
        <item name="icon">@drawable/ic_allow</item>
        <item name="iconGravity">end</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ViewPagerStyle">
        <item name="cornerRadius">15dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">101dp</item>
    </style>
</resources>